{
    // http://www.jshint.com/docs/options/

    // Enforcing options
    "bitwise"  : true,
    "curly"    : true,
    "eqeqeq"   : true,
    "es3"      : true,
    "immed"    : true,
    "latedef"  : true,
    "noarg"    : true,
    "noempty"  : true,
    "nonew"    : true,
    "undef"    : true,
    "nonew"    : true,
    "quotmark" : "single",
    "unused"   : true,
    "undef"    : true,
    "newcap"   : true,
    "trailing" : true,

    // Relaxing options
    "expr"     : true,
    "laxbreak" : true,
    "maxerr"   : 100,

    // Environments
    "browser"  : true,
    "jquery"   : true,

    "globals"   : {
        "require": false,
        "define" : false,
        "s"      : false
    }
}
