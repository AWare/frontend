{
    "name": "frontend-future",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "preinstall": "node ./__tools__/preinstall.js && yarn check:env -s",
        "check:env": "check-node-version --package",
        "lint": "yarn install -s && eslint .",
        "lint:fix": "yarn lint -- --fix",
        "test": "yarn install -s && jest",
        "test:watch": "yarn install -s && yarn test -- --watch",
        "test:ci": "yarn test -- --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "clean": "rm -rf ./dist",
        "bundle": "BABEL_ENV=production yarn install -s && yarn run clean -s && webpack --config ./__config__/webpack.config.prod.js --progress && echo 'Client bundle size:' && gzip-size ../static/target/javascripts/ui.bundle.browser.js",
        "dev": "yarn install -s && yarn run clean -s && concurrently --kill-others -n \"BRSR,SRVR\" -c \"red.dim,cyan.dim\" \"yarn dev:browser\" \"yarn dev:server\"",
        "dev:browser": "webpack-dev-server --config ./__config__/webpack.config.dev.js --env.browser",
        "dev:server": "webpack --config ./__config__/webpack.config.dev.js --env.server"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/guardian/frontend-future.git"
    },
    "homepage": "https://github.com/guardian/frontend-future#readme",
    "engines": {
        "node": "^6.0.0",
        "yarn": "0.27.5"
    },
    "dependencies": {
        "preact": "^8.2.1",
        "preact-render-to-string": "^3.6.0",
        "styletron": "^2.5.7",
        "styletron-client": "^2.5.7",
        "styletron-preact": "^2.5.7",
        "styletron-server": "^2.5.7"
    },
    "devDependencies": {
        "babel-plugin-provide-modules": "^1.0.3",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.23.0",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "check-node-version": "^2.1.0",
        "concurrently": "^3.5.0",
        "coveralls": "^2.13.0",
        "gzip-size-cli": "^2.0.0",
        "sass-loader": "^6.0.6",
        "styletron-loader": "^0.6.0",
        "webpack": "^3.3.0",
        "webpack-dev-server": "^2.5.1",
        "webpack-hot-middleware": "^2.18.2"
    },
    "jest": {
        "moduleDirectories": [
            "<rootDir>/src",
            "<rootDir>/src/app",
            "node_modules"
        ],
        "globals": {
            "BROWSER": false,
            "SERVER": true
        }
    }
}
