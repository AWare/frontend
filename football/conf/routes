# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# For dev machines
GET     /assets/*file                                   controllers.Assets.at(path="/public", file)

GET     /football/fixtures/:year/:month/:day                controllers.FixturesController.allCompetitionsOn(year, month, day)
GET     /football/fixtures                                  controllers.FixturesController.allCompetitions()
GET     /football/:competition/fixtures/:year/:month/:day   controllers.CompetitionFixturesController.renderFor(year, month, day, competition)
GET     /football/:competition/fixtures                     controllers.CompetitionFixturesController.render(competition)

GET     /football/results/:year/:month/:day             controllers.ResultsController.allCompetitionsOn(year, month, day)
GET     /football/results                               controllers.ResultsController.allCompetitions()

GET     /football/live                                  controllers.LiveMatchesController.render()
